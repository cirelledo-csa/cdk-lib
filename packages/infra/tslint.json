{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore",
          "imports": "ignore",
          "exports": "ignore"
        },
        "singleline": {
          "objects": "ignore",
          "arrays": "ignore",
          "functions": "never",
          "typeLiterals": "ignore",
          "imports": "never",
          "exports": "never"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
